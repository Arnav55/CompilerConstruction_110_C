%{
#include "y.tab.h"
#include <stdlib.h>
%}

%%

[0-9]+          { yylval.num = atoi(yytext); return NUMBER; }
[ \t]+          { /* ignore spaces */ }

"+"             { return PLUS; }
"*"             { return MULT; }
"-"             { return MINUS; }
"/"             { return DIVIDE; }

"\n"            { return '\n'; }
.               { /* ignore other chars */ }

%%

int yywrap() {
    return 1;
}
